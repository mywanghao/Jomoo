<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <!-- 填充色 -->
            <solid android:color="#00000088" />
            <!-- 圆角 -->
            <corners
                android:radius="20dp"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@android:color/white"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@android:color/white"/>
        </shape>
    </item>
</selector>